{
  "name": "mcpflare",
  "displayName": "MCPflare",
  "description": "Use local MCP servers securely with zero-trust isolation while reducing context window token usage by up to 98%",
  "version": "1.0.0",
  "publisher": "forgedapps",
  "license": "MIT",
  "author": {
    "name": "Forged Apps",
    "email": "jgentes@gmail.com"
  },
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jgentes/mcpflare.git",
    "directory": "vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/jgentes/mcpflare/issues"
  },
  "homepage": "https://github.com/jgentes/mcpflare/tree/main/vscode-extension#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "security",
    "isolation",
    "sandbox",
    "cloudflare-workers",
    "vscode",
    "vscode-extension"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension/index.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcpflare",
          "title": "MCPflare",
          "icon": "media/shield.svg"
        }
      ]
    },
    "views": {
      "mcpflare": [
        {
          "type": "webview",
          "id": "mcpflare.configPanel",
          "name": "Configuration"
        }
      ]
    },
    "commands": [
      {
        "command": "mcpflare.openSettings",
        "title": "Open MCPflare Settings",
        "category": "MCPflare"
      },
      {
        "command": "mcpflare.refreshMCPs",
        "title": "Refresh MCP List",
        "category": "MCPflare"
      },
      {
        "command": "mcpflare.importFromIDE",
        "title": "Import MCPs from IDE Config",
        "category": "MCPflare"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build:all",
    "build": "npm run build:extension && npm run build:webview",
    "build:all": "npm run build:server && npm run build:extension && npm run build:webview && npm run copy:server",
    "build:server": "cd .. && npm run build",
    "build:extension": "esbuild src/extension/index.ts --bundle --outfile=dist/extension/index.js --external:vscode --format=cjs --platform=node",
    "build:webview": "esbuild src/webview/index.tsx --bundle --outfile=dist/webview/index.js --format=iife --loader:.tsx=tsx --loader:.ts=ts",
    "copy:server": "node -e \"const fs=require('fs');const path=require('path');const src='../dist';const dest='./mcpflare-server';if(!fs.existsSync(dest))fs.mkdirSync(dest,{recursive:true});fs.cpSync(src,dest,{recursive:true});console.log('Copied mcpflare server to extension')\"",
    "watch": "concurrently \"npm run watch:extension\" \"npm run watch:webview\"",
    "watch:extension": "esbuild src/extension/index.ts --bundle --outfile=dist/extension/index.js --external:vscode --format=cjs --platform=node --watch",
    "watch:webview": "esbuild src/webview/index.tsx --bundle --outfile=dist/webview/index.js --format=iife --loader:.tsx=tsx --loader:.ts=ts --watch",
    "lint": "biome check src/",
    "lint:fix": "biome check --apply src/",
    "test": "vitest run --no-watch --no-open",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.85.0",
    "@types/vscode-webview": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.17",
    "concurrently": "^8.2.0",
    "esbuild": "^0.27.0",
    "sharp": "^0.34.5",
    "typescript": "^5.3.0",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
