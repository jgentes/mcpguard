{
  "name": "mcpguard",
  "version": "0.2.0",
  "description": "Use local MCP servers securely with zero-trust isolation while reducing context window token usage by up to 98%.",
  "type": "module",
  "main": "dist/server/index.js",
  "types": "dist/server/index.d.ts",
  "bin": {
    "mcpguard": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx src/server/index.ts",
    "cli": "tsx src/cli/index.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:ci": "vitest run --reporter=dot",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:security": "vitest run tests/security",
    "cleanup:test-configs": "tsx scripts/cleanup-test-configs.ts",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write src",
    "check": "biome check src",
    "check:fix": "biome check --write src",
    "worker:dev": "npx wrangler dev",
    "benchmark": "tsx benchmarks/github-comparison.ts",
    "release": "release-it",
    "publish": "npm publish --provenance --access public"
  },
  "keywords": [
    "mcp",
    "cloudflare-workers",
    "code-mode",
    "security",
    "isolation",
    "sandbox",
    "model-context-protocol"
  ],
  "author": "James Gentes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jgentes/mcpguard.git"
  },
  "bugs": {
    "url": "https://github.com/jgentes/mcpguard/issues"
  },
  "homepage": "https://github.com/jgentes/mcpguard#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.0",
    "dotenv": "^16.3.1",
    "jsonc-parser": "^3.3.1",
    "pino": "^10.1.0",
    "pino-pretty": "^10.2.3",
    "wrangler": "^4.47.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@release-it/conventional-changelog": "^8.0.2",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^2.1.8",
    "release-it": "^17.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
